#!/bin/sh

SOCKET="/tmp/.ydotool_socket"

KEY_R=19
KEY_DELETE=111
KEY_LEFTSHIFT=42

CLICK_DOWN=0x40
CLICK_UP=0x80

DOWN=1
UP=0

sudo YDOTOOL_SOCKET=$SOCKET ydotool click --next-delay=25 $CLICK_DOWN $CLICK_UP
sudo YDOTOOL_SOCKET=$SOCKET ydotool key $KEY_R:$DOWN $KEY_DELETE:$DOWN $KEY_LEFTSHIFT:$DOWN
sleep 0.025
sudo YDOTOOL_SOCKET=$SOCKET ydotool key $KEY_R:$UP $KEY_DELETE:$UP $KEY_LEFTSHIFT:$UP
